{
    "manifestVersion": 1,
    "id": "set-by-extension-manifest.environment.json",
    "name": "set-by-extension-manifest.environment.json",
    "version": "set-by-extension-manifest.environment.json",
    "publisher": "octopusdeploy",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Build and Release tasks for integrating with Octopus Deploy",
    "public": false,
    "categories": [
        "Build and release"
    ],
    "tags": [
        "octopus",
        "octopus deploy",
        "deploy"
    ],
    "icons": {
        "default": "extension-icon.png"
    },
    "screenshots": [
        {
            "path": "img/tfsbuild-addbuildstep.png"
        }
    ],
    "content": {
        "details": {
            "path": "vsts.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://octopus.com"
        },
        "getstarted": {
            "uri": "http://docs.octopusdeploy.com/display/OD/Use+the+Team+Foundation+Build+Custom+Task"
        },
        "support": {
            "uri": "https://octopus.com/support"
        },
        "repository": {
            "uri": "https://github.com/OctopusDeploy/OctoTFS"
        }
    },
    "files": [
        {
            "path": "Tasks"
        },
        {
            "path": "img",
            "addressable": true
        }
    ],
    "scopes": [
        "vso.build",
        "vso.build_execute"
    ],
    "contributions": [
        {
            "id": "octopus-create-release",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/CreateOctopusRelease"
            }
        },
        {
            "id": "octopus-deploy",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/Deploy"
            }
        },
        {
            "id": "octopus-pack",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/Pack"
            }
        },
        {
            "id": "octopus-push",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/Push"
            }
        },
        {
            "id": "octopus-promote",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/Promote"
            }
        },
        {
            "id": "endpoint-auth-scheme-octopusapi",
            "description": "Octopus API key based endpoint authentication scheme",
            "type": "ms.vss-endpoint.service-endpoint-auth-scheme",
            "targets": [ "ms.vss-endpoint.endpoint-auth-schemes" ],
            "properties": {
                "name": "Octopus Deploy",
                "displayName": "Octopus Deploy Authentication with an API Key",
                "headers": [{"name": "X-Octopus-ApiKey", "value": "{{endpoint.apikey}}"}],
                "inputDescriptors": [
                    {
                    "id": "apikey",
                    "name": "Octopus API Key",
                    "description": "API Key for connection to Octopus",
                    "inputMode": "textbox",
                    "isConfidential": true,
                    "validation": {
                        "isRequired": true,
                        "dataType": "string",
                        "maxLength": 35
                        }
                    }
                ]
            }
        },
        {
            "id": "octopus-endpoint-type",
            "description": "Octopus Deploy Endpoint type for Octopus Build tasks",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "octopusendpoint",
                "displayName": "Octopus Deploy",
                "dataSources": [
                    {
                        "name": "Projects",
                        "endpointUrl": "$(endpoint.url)/api/projects/all",
                        "resultSelector": "jsonpath:$.[*].Name"
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-octopusapi"
                    }
                ],
                "helpMarkDown": "Octopus Deploy endpoint"
            }
        }
    ]
}